@page "/{ReportKey}"
@using AstroPanda.Blazor.PowerBI.Options
@using Microsoft.Extensions.Options

<EmbeddedReport @bind-WorkspaceId="_reportRef.WorkspaceId" @bind-ReportId="_reportRef.ReportId" />

@code {
    [Inject]
    private IOptionsMonitor<PowerBIOptions> _options { get; set; }

    [Parameter]
    public string ReportKey { get; set; }

    private ReportReference _reportRef => _options.CurrentValue.Reports[ReportKey ?? "inventory"];
}